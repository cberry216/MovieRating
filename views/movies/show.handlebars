<div class="row">
  <div class="col s12 m12 l8">
    <h1>{{movieData.Title}}</h1>
    <img class="center" src="{{movieData.Poster}}">
    <p>{{movieData.Plot}}</p>
    <p>{{movieData.Year}}</p>
    <p>{{movieData.Rated}}</p>
    <p>{{movieData.Genre}}</p>
  </div>
  <form class="col s12 m12 l4">
    <h1>Rate</h1>
    <form action="" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <p class="range-field">
            <input type="range" id="rating" min="1" max="10" />
            <label for="rating">Rate</label>
          </p>
        </div>
        <div class="input-field col s12">
          <textarea name="comment" id="comment"></textarea>
          <label for="comment"></label>
        </div>
      </div>
      <button type="submit" class="btn red darken-1">Rate</button>
    </form>
</div>
</div>
</div>